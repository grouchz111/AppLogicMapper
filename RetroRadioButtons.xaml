<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="RadioButton">
        <Setter Property="FontFamily" Value="Tahoma"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <StackPanel Orientation="Horizontal">

                        <Grid Width="13" Height="13" Margin="0,0,6,0">

                            <Ellipse Fill="Transparent"
                                     Stroke="#404040"
                                     StrokeThickness="1"/>

                            <Ellipse x:Name="Highlight"
                                     Margin="1"
                                     Stroke="#FFFFFF"
                                     StrokeThickness="1"/>

                            <Ellipse x:Name="Shadow"
                                     Margin="1"
                                     Stroke="#808080"
                                     StrokeThickness="1"/>

                            <Ellipse x:Name="Dot"
                                     Width="5" Height="5"
                                     Fill="Black"
                                     Visibility="Collapsed"/>
                        </Grid>

                        <ContentPresenter VerticalAlignment="Center"/>
                    </StackPanel>

                    <ControlTemplate.Triggers>

                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="Dot" Property="Visibility" Value="Visible"/>
                        </Trigger>

                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Highlight" Property="Stroke" Value="#808080"/>
                            <Setter TargetName="Shadow" Property="Stroke" Value="#FFFFFF"/>
                        </Trigger>

                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Foreground" Value="#808080"/>
                            <Setter TargetName="Dot" Property="Fill" Value="#808080"/>
                        </Trigger>

                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
