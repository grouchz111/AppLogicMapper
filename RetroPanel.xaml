<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="RetroPanel" TargetType="ContentControl">
        <Setter Property="Padding" Value="4"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ContentControl">
                    <Grid SnapsToDevicePixels="True">
                        <Border Background="#ECE9D8" BorderBrush="#404040" BorderThickness="1"/>

                        <Border Margin="1" BorderBrush="#FFFFFF" BorderThickness="1,1,0,0"/>

                        <Border Margin="1" BorderBrush="#808080" BorderThickness="0,0,1,1"/>

                        <ContentPresenter Margin="{TemplateBinding Padding}"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>